<%- include ('partials/header'); -%>
<div class="page-content">
<div class="page-header">
    <div class="container-fluid">
      <h2 class="h5 no-margin-bottom">Employees List</h2>
    </div>
  </div>
<section class="no-padding-bottom">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:0px">
            <% if (users.length > 0) {%>
            <table class="table table-striped table-dark table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">IMAGE</th>
                        <th scope="col">FIRST NAME</th>
                        <th scope="col">LAST NAME</th>
                        <th scope="col">POSITION</th>
                        <th scope="col">DATE OF JOINING</th>
                        <th scope="col">GENDER</th>
                        <th scope="col">DATE OF BIRTH</th>
                        <th scope="col">PHONE NUMBER</th>
                        <th scope="col">EMAIL</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                    <tr>
                        <th scope="row"><%= user.EMP_ID %></th>
                        <td><img src="/assets/img/<%= user.PHOTO_PATH %>" class="rounded-circle player-img" alt=""></td>
                        <td><%= user.FIRTS_NAME %></td>
                        <td><%= user.LAST_NAME %></td>
                        <td><%= user.DESIGNATION_ID %></td>
                        <td><%= user.DATE_OF_JOIN %></td>
                        <td><%= user.GENDER_ID %></td>
                        <td><%= user.DATE_OF_BIRTH %></td>
                        <td><%= user.P_PHONE %></td>
                        <td><%= user.P_EMAIL %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" target="_blank" rel="noopener"
                                class="btn btn-sm btn-primary"
                                style="margin-top: -1rem; padding-right: 1.5rem;">Edit</a>
                            <a href="/delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p class="text-center">No players found. Go <a href="/add">here</a> to add players.</p>
            <% } %>
        </div>
    </div>
    </div>
</section>
</div>
</div>
<%- include ('partials/footer'); -%>
</body>

</html>