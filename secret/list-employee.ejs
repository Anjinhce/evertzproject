<%- include ('partials/header'); -%>
<div class="page-content">
<div class="page-header">
    <div class="container-fluid">
      <h2 class="h5 no-margin-bottom">Employees List</h2>
    </div>
  </div>
<section class="no-padding-bottom">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:0px">
            <% if (users.length > 0) {%>
            <table class="table table-striped table-dark table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Photo</th>
                        <th>Name<ation</th>
                        <th>Birth </th>
                        <th>DesignDate</th>
                        <th>Joiningl E-mail</th>
                        <th>Persona Date</th>
                        <th>Personal Phone</th>
                        <th>Work E-mail</th>
                        <th>Work Phone</th>
                    </tr>

                    <%
                           
                function convert(str) {
                  var date = new Date(str),
                    mnth = ("0" + (date.getMonth() + 1)).slice(-2),
                    day = ("0" + date.getDate()).slice(-2);
                  return [day, mnth,date.getFullYear() ].join("-");
                  
                }
                %>

                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                    <tr>
                        <td><%= user.EMP_ID %></th>
                        <td><img   height="50px"  width="50px"  src="/assets/img/<%= user.PHOTO_PATH %>" class="rounded-circle player-img" alt="not uploaded"></td>
                      
                        <td><%=user.FIRTS_NAME +" " +user.MIDDLE_NAME +" "+user.LAST_NAME %></td>
                        <td><%=user.DESIGNATION %></td>
                        <td><%=convert(user.DATE_OF_JOIN) %></td>
                        <td><%=convert( user.DATE_OF_BIRTH) %></td>
                        <td><%=user.P_EMAIL %></td>
                        <td> <%=user.P_PHONE %></td>
                        <td> <%=user.W_EMAIL %></td>
                        <td> <%=user.W_PHONE %></td>
                        <td>
                            <a href="#" <i style="color:yellow;font-size: 20px;"  class="fas fa-user-edit"></i> </a><br>
                          <a href="#" <i  style="color:yellow;font-size: 20px;" class="fas fa-user-times"></i> </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p class="text-center">No players found. Go <a href="/add">here</a> to add players.</p>
            <% } %>
        </div>
    </div>
    </div>
</section>
</div>
</div>
<%- include ('partials/footer'); -%>
</body>

</html>