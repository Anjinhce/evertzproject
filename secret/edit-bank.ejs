<%- include ('partials/header'); -%>
<div class="page-content">
<div class="page-header">
    <div class="container-fluid">
      <h2 class="h5 no-margin-bottom">Add Employee's Bank Details</h2>
    </div>
  </div>

    <section class="no-padding-bottom">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <form method="POST" action="/secret/update_bank_details/<%= print[0].EMP_ID %>" enctype="multipart/form-data">
                <input type="hidden" name="emp_id" value="<%= print[0].e_id %>" >
                <div class="wrapper1">
                  <br>
                  <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 15px;">
                      <p style="margin-left:30px">Employee Id: <b style="color:white"><%= print[0].e_id %></b></p>
                    </div>
                </div>
                <br>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="account_name" value="<%= print[0].ACC_HOLD_NAME %>" required/>
                        <label data-content="Account Holder Name">Account Holder Name</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="account_no" value="<%= print[0].ACC_NO %>" required/>
                        <label data-content="Account Number">Account Number</label>
                     </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield red">
                          <input type="text" name="ifsc" value="<%= print[0].IFSC_CODE %>" required/>
                          <label data-content="IFSC Code">IFSC Code</label>
                       </div>
                      </div>
                      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield red">
                          <input type="text" name="bank_name" value="<%= print[0].BANK_NAME %>" required/>
                          <label data-content="Bank Name">Bank Name</label>
                       </div>
                      </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="branch_name" value="<%= print[0].BRANCH_NAME %>" required/>
                        <label data-content="Branch Name">Branch Name</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="swift_code" value="<%= print[0].SWIFT_CODE %>" required/>
                        <label data-content="Swift Code">Swift Code</label>
                     </div>
                    </div>
                  </div>
    <br>
    <button class="btn-submit">Update</button>
  </div>
    </form>
            </div>
          </div>
        </div>
      </section>
      </div>
</div>
<%- include ('partials/footer'); -%>
</body>

</html>