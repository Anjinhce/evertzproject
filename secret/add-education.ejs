<%- include ('partials/header'); -%>
<div class="page-content">
<div class="page-header">
    <div class="container-fluid">
      <h2 class="h5 no-margin-bottom">Add Education Details</h2>
    </div>
  </div>

    <section class="no-padding-bottom">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <form method="POST" action="/secret/add_education_details" enctype="multipart/form-data">
                <input type="hidden" name="emp_id" value="<%= user_id %>" >
                <div class="wrapper1">
                  <br>
                  <ul class="progress_1" style="background-color:none !important;height: 10rem">
                    <li class="progress__circle first-circle progress--active progress--done"></li>
                    <li class="progress__bar progress--done"></li>
                    <li class="progress__circle second-circle progress--active"></li>
                    <li class="progress__bar"></li>
                    <li class="progress__circle third-circle"></li>
                    <li class="progress__bar"></li>
                    <li class="progress__circle fourth-circle"></li>
                  </ul>
                  <br>
                  <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 15px;">
                        <p style="margin-left:30px">Employee Id: <b style="color:white"><%= user_id %></b></p>
                      </div>
                  </div>
                  <br>
                  <div class="row add-row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                      <h2 style="margin-left:30px;font-size:30px">
                        Education 1
                      </h2>
                    </div>
                    <br>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <select name="education_type0" required>
                            <option value="--">Select Education Type</option>
                            <% print1.forEach(function(user1) { %>
                              <option value="<%= user1.ID %>"><%= user1.NAME %></option>
                              <% }) %>
                        </select>
                        <label data-content="Education Type">Education Type</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <select name="education_branch0" required>
                            <option value="--">Select Branch</option>
                            <% print.forEach(function(user) { %>
                              <option value="<%= user.ID %>"><%= user.NAME %></option>
                              <% }) %>
                        </select>
                        <label data-content="Education Branch">Education Branch</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <select name="education_grade0" required>
                            <option value="--">Select Grade</option>
                            <% print2.forEach(function(user2) { %>
                              <option value="<%= user2.ID %>"><%= user2.NAME %></option>
                              <% }) %>
                        </select>
                        <label data-content="Grade">Grade</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="percentage0" maxlength="4" id="percentage" required/>
                        <label data-content="Percentage">Percentage</label>
                     </div>
                    </div>
                  </div>
                  <div class="add-btn" style="text-align: center;margin-top:15px;margin-bottom: 15px;">
                    <i class="fa fa-plus add-btn-fa" aria-hidden="true" style="height: 50px;
                    color: white;
                    font-size: 30px;
                    background: #15161b;
                    padding-top: 10px;
                    border-radius: 50%;
                    width: 50px;"></i>
                    <p>Add more educational details</p>
                  </div>
    <br>
    <input type="hidden" name="count_education" class="count_education">
    <button class="btn-submit">Submit</button>
  </div>
    </form>
            </div>
          </div>
        </div>
      </section>
      </div>
</div>
<%- include ('partials/footer'); -%>
<script>
var i=0;
$(".add-btn").click(function()
{
    i++;
    $(".count_education").val(i);
    $(".add-row").append('<div class="col-md-12 col-lg-12 col-xs-12 col-sm-12"><h2 style="margin-left:30px">Education '+(i+1)+'</h2></div><br><div class="col-lg-6 col-md-6 col-sm-12 col-xs-12"><div class="material-textfield blue"><select name="education_type'+i+'" required><option value="--">Select Education Type</option><% print1.forEach(function(user1) { %><option value="<%= user1.ID %>"><%= user1.NAME %></option><% }) %></select><label data-content="Education Type">Education Type</label></div></div><div class="col-lg-6 col-md-6 col-sm-12 col-xs-12"><div class="material-textfield blue"><select name="education_branch'+i+'" required><option value="--">Select Branch</option><% print.forEach(function(user) { %><option value="<%= user.ID %>"><%= user.NAME %></option><% }) %></select><label data-content="Education Branch">Education Branch</label></div></div><div class="col-lg-6 col-md-6 col-sm-12 col-xs-12"><div class="material-textfield blue"><select name="education_grade'+i+'" required><option value="--">Select Grade</option><% print2.forEach(function(user2) { %><option value="<%= user2.ID %>"><%= user2.NAME %></option><% }) %></select><label data-content="Education Grade">Education Grade</label></div></div><div class="col-lg-6 col-md-6 col-sm-12 col-xs-12"><div class="material-textfield red"><input type="text" name="percentage'+i+'" required/><label data-content="Percentage">Percentage</label></div></div>')
})
$(function() {
    $( "#datepicker").datepicker({format: 'yyyy-mm-dd'});
    $( "#datepicker1").datepicker({format: 'yyyy-mm-dd'});
    $("#files").inputFileText( { text: 'Upload Experience Certificate',buttonClass: 'upload-image' } );
    });
</script>






</body>

</html>