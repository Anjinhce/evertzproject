<%- include ('../secret/heade') %>
<div class="page-content">
<div class="page-header">
    <div class="container-fluid">
      <h2 class="h5 no-margin-bottom">Add Employee's Bank Details</h2>
    </div>
  </div>

    <section class="no-padding-bottom">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <form method="POST" action="/secret/add_bank_details">
                <input type="hidden" name="emp_id" value="<%= user_id %>" >
                <div class="wrapper1">
                  <br>
                  <ul class="progress_1" style="background-color:none !important;height: 10rem">
                    <li class="progress__circle first-circle progress--done progress--active"></li>
                    <li class="progress__bar progress--done"></li>
                    <li class="progress__circle second-circle progress--done progress--active"></li>
                    <li class="progress__bar progress--done"></li>
                    <li class="progress__circle third-circle progress--active"></li>
                    <li class="progress__bar"></li>
                    <li class="progress__circle fourth-circle"></li>
                  </ul>
                  <br>
                  <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 15px;">
                      <p style="margin-left:30px">Employee Id: <b style="color:white"><%= user_id %></b></p>
                    </div>
                </div>
                <br>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="account_name" required/>
                        <label data-content="Account Holder Name">Account Holder Name</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">

                        <input type="text" name="account_no" required/>
                        <label data-content="Account Number">Account Number</label>
                     </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield red">
                          <input type="text" name="ifsc" required/>
                          <label data-content="IFSC Code">IFSC Code</label>
                       </div>
                      </div>
                      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield red">
                          <input type="text" name="bank_name" required/>
                          <label data-content="Bank Name">Bank Name</label>
                       </div>
                      </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="branch_name" required/>
                        <label data-content="Branch Name">Branch Name</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="swift_code" required/>
                        <label data-content="Swift Code">Swift Code</label>
                     </div>
                    </div>
                  </div>
    <br>
    <button class="btn-submit">Submit</button>
  </div>
    </form>
            </div>
          </div>
        </div>
      </section>
      </div>
</div>
<%- include ('partials/footer'); -%>
</body>

</html>