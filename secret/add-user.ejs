<%- include ('partials/header'); -%>
<div class="page-content">
<div class="page-header">
    <div class="container-fluid">
      <h2 class="h5 no-margin-bottom">Add Employee</h2>
    </div>
  </div>

    <section class="no-padding-bottom">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <form method="POST" action="/secret/add-user" enctype="multipart/form-data">
                <div class="wrapper1">
                  <br>
                  <ul class="progress_1" style="background-color:none !important;height: 10rem">
                    <li class="progress__circle first-circle progress--active"></li>
                    <li class="progress__bar"></li>
                    <li class="progress__circle second-circle"></li>
                    <li class="progress__bar"></li>
                    <li class="progress__circle third-circle"></li>
                    <li class="progress__bar"></li>
                    <li class="progress__circle fourth-circle"></li>
                  </ul>
                  <br>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="employee_id" id="emp_id" required/>
                        <label data-content="Employee ID">Employee ID</label>
                      </div>
                      <span style="margin-left: 30px;
                      color: red;" id="empid-label"></span>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="first_name" required/>
                        <label data-content="First Name">First Name</label>
                     </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield red">
                          <input type="text" name="middle_name" required/>
                          <label data-content="Middle Name">Middle Name</label>
                       </div>
                      </div>
                      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield red">
                          <input type="text" name="last_name" required/>
                          <label data-content="Last Name">Last Name</label>
                       </div>
                      </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="dob"  id="datepicker" required/>
                        <label data-content="Date of Birth">Date of Birth</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="doj" id="datepicker1" required/>
                        <label data-content="Date of joining">Date of joining</label>
                     </div>
                    </div>
                  </div>
    
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                          <select name="designation" required>
                              <option value="--">Select Designation</option>
                              <% print.forEach(function(user) { %>
                              <option value="<%= user.ID %>"><%= user.DESIGNATION %></option>
                              <% }) %>
                          </select>
                        <label data-content="Designation">Designation</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield blue">
                            <select name="gender" required>
                                <option value="--">Select Gender</option>
                                <% print1.forEach(function(user1) { %>
                                  <option value="<%= user1.ID %>"><%= user1.GENDER %></option>
                                  <% }) %>
                            </select>
                          <label data-content="Gender">Gender</label>
                        </div>
                    </div>
                  </div>
    
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="reporting_to" required/>
                        <label data-content="Reporting To">Reporting To</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield red">
                        <input type="text" name="p_email" required/>
                        <label data-content="Personal Email">Personal Email</label>
                     </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="w_email" required/>
                        <label data-content="Work Email">Work Email</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield blue">
                          <input type="text" name="p_phone" required/>
                          <label data-content="Personal Phone No.">Personal Phone No.</label>
                        </div>
                      </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <input type="text" name="w_phone" required/>
                        <label data-content="Work Phone No.">Work Phone No.</label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="material-textfield blue">
                            <input type="file" id="files" class="form-control" name="photo" required />
                        </div>
                      </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="material-textfield blue">
                        <select name="country" required>
                            <option value="--">Select Country</option>
                            <% print2.forEach(function(user2) { %>
                              <option value="<%= user2.ID %>"><%= user2.NAME %></option>
                              <% }) %>
                        </select>
                      <label data-content="Country">Country</label>
                      </div>
                    </div>
                    
                  </div>
    <br>
    <button class="btn-submit">Submit</button>
  </div>
    </form>
            </div>
          </div>
        </div>
      </section>
      </div>
</div>
<%- include ('partials/footer'); -%>
<script>
$(function() {
    $( "#datepicker").datepicker({format: 'yyyy-mm-dd'});
    $( "#datepicker1").datepicker({format: 'yyyy-mm-dd'});
    $("#files").inputFileText( { text: 'Upload Employee Photo',buttonClass: 'upload-image' } );
    });
</script>

<script>

    $("#emp_id").focusout(function()
    {
      $.ajax({
        type:'get',
        data: {send_data: $("#emp_id").val()},
        url: '/emp_check',
        success:function(newData)
        {
          if(newData=="Employee ID is Alredy exists")
          {
           
            swal({
  title: "Employee ID error",
  text: newData+"   " +"  use Another ID",
  icon: "warning",
});
$('#emp_id').val("");

            
          }
          
         
        }
      })
    })





    </script>

</body>

</html>