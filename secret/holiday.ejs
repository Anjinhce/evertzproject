                <%
                           
                function convert(str) {
                  var date = new Date(str),
                    mnth = ("0" + (date.getMonth() + 1)).slice(-2),
                    day = ("0" + date.getDate()).slice(-2);
                  return [day, mnth,date.getFullYear() ].join("-");
                  
                }
                %>

               <!-- fileter section  starts -->
               <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
               <div class="material-textfield red">
                 <form method="POST"  action="/holiday_filter">
                <select  required  name="holi_filter" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                    
                    <option value="">Choose Country......</option>
                    <% country.forEach(function (c_data) { %>
                      <option value="<%= c_data.ID %>"><%= c_data.NAME  %></option>
                      <% }) %>
                      
                  </select>
                 </div>
               </div>
               <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                <button style="margin-top: 25px; font-size: 20px; border-radius: 5px;margin-right:50px;" class="edit-btn" >Filter</button>
              </form>
              <button onclick="window.location.href = '/secret/holiday';" style="margin-top: 25px; font-size: 20px; border-radius: 5px;margin-right:50px;" class="edit-btn" >Show All</button>
               
      </div>


               </div>
              
                <!-- fileter section  Ends -->


                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                       
                    <tr>
                          <th>SL NO</th>
                          <th>NAME</th>
                          <th>DATE</th>
                          <th>COUNTRY</th>
                        </tr>
                      </thead>
                      <tbody>  

                        <% if(msg=='false') { %>
                        <% h_data.forEach(function (holy) { %>
